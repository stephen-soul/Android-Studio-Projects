<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="stephen.androidmagiccounter.MainActivity">

    <!-- This controls the "How many players" text-->
    <TextView
        android:id="@+id/amountOfPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amountOfPlayers"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <!-- This controls the "2" button below the players-->
    <Button
        android:id="@+id/ButtonPlayers2"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:backgroundTint="#444444"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <!-- This controls the Starting life text-->
    <TextView
        android:id="@+id/startingLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting life"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456"
        app:layout_constraintHorizontal_bias="0.501" />

    <!-- This controls the "20" button-->
    <Button
        android:id="@+id/startingLifeIs20"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:backgroundTint="#444444"
        android:text="20"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589"
        app:layout_constraintHorizontal_bias="0.239" />

    <!-- This controls the "30" button-->
    <Button
        android:id="@+id/startingLifeIs30"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:backgroundTint="#444444"
        android:text="30"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <!-- This controls the "40" button-->
    <Button
        android:id="@+id/startingLifeIs40"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:backgroundTint="#444444"
        android:text="40"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589"
        app:layout_constraintHorizontal_bias="0.754" />

    <!-- This controls the "40" button-->
    <Button
        android:id="@+id/begin"
        android:layout_width="127dp"
        android:layout_height="61dp"
        android:backgroundTint="#444444"
        android:text="Begin"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774"
        app:layout_constraintHorizontal_bias="0.501" />

</android.support.constraint.ConstraintLayout>
